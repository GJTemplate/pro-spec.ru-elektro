	<config>
		<fields name="params">
			<fieldset name="basic">
				<fieldset addfieldpath="/libraries/GNZ11/Extensions/Fields" />
				<field name="version_tmpl"
					type="version"
					path_xml="/templates/elektro/templateDetails.xml"
					class="version_plugin "
					filter="raw" />

				<field name="debug"
					   type="radio"
					   default="0"
					   label="TPL_ELEKTRO_DEBUG"
					   description="TEMPLATE_DETAILS_DEBUG_DESC"
					   class="btn-group btn-group-yesno"
					   showon=""
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="load_google_tag_manager"
					type="radio"
					default="1"
					readonly="0"
					label="Load google tag manager"
					class="btn-group btn-group-yesno"
					showon="" >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>



				<field name="critical_as_file"
					   type="radio"
					   default="0"
					   label="TEMPLATE_DETAILS_CRITICAL_CSS_AS_FILE"
					   description="TEMPLATE_DETAILS_CRITICAL_CSS_AS_FILE_DESC"
					   class="btn-group btn-group-yesno"
					   showon="debug:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>



			</fieldset>
		</fields>
	</config>


